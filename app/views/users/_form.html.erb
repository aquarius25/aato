    <%= form.label :skill_list, "スキル・特技（カンマ区切り）" %><br>
    <%= text_field_tag 'user[skill_list]', @user.skill_list.join(',') %>
  </div>
  <div class="field">
    <%= form.label :interest_list, "興味・関心（カンマ区切り）" %><br>
    <%= text_field_tag 'user[interest_list]', @user.interest_list.join(',') %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
